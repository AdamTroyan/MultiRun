<Window x:Class="MultiRun.InputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MultiRun"
        mc:Ignorable="d"
        Title="Add New Group" Height="200" Width="350" WindowStartupLocation="CenterOwner" Background="#1E1E1E" Foreground="White" ResizeMode="NoResize">
    <Window.Resources>
        <DropShadowEffect x:Key="DropShadow" Color="#000000" Opacity="0.4" ShadowDepth="4" BlurRadius="8"/>
        <Style x:Key="DialogButton" TargetType="Button">
            <Setter Property="Background" Value="#3A3A3A"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderBrush" Value="#555555"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#000000" Opacity="0.3" ShadowDepth="2" BlurRadius="4"/>
                </Setter.Value>
            </Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="6" Effect="{TemplateBinding Effect}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#5A5A5A"/>
                                <Setter Property="BorderBrush" Value="#777777"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#2A2A2A"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid Background="#1E1E1E">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Orientation="Vertical">
            <TextBlock x:Name="txtPrompt" Text="Enter text:" FontSize="16" Foreground="#CCCCCC" Margin="0,0,0,15" HorizontalAlignment="Center" Effect="{StaticResource DropShadow}"/>
            <TextBox x:Name="txtInput" Width="250" Height="35" Background="#3A3A3A" Foreground="White" BorderBrush="#555555" BorderThickness="1" Padding="5" Margin="0,0,0,20" HorizontalAlignment="Center" Effect="{StaticResource DropShadow}"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="btnOk" Content="OK" Width="80" Height="35" Style="{StaticResource DialogButton}" Click="btnOk_Click"/>
                <Button x:Name="btnCancel" Content="Cancel" Width="80" Height="35" Style="{StaticResource DialogButton}" Click="btnCancel_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>